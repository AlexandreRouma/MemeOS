            "type": "shell",
            "command": "bash --login -c 'make -j8 iso'",
            "group": {
                "kind": "test",
                "isDefault": true,
            },
            "problemMatcher": []
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "bash --login -c 'make -j8'; &('C:/Program Files/qemu/qemu-system-i386') -kernel bin/MemeOS.bin -serial mon:stdio -drive file=hda.img,format=raw",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Run (With ISO)",
            "type": "shell",
            "command": "bash --login -c 'make -j8 iso'; &('C:/Program Files/qemu/qemu-system-i386') -cdrom bin/MemeOS.iso -serial mon:stdio -drive file=hda.img,format=raw",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Run in BOCHS (Rqrs. ISO)",
            "type": "shell",
            "command": "bash --login -c 'make -j8 iso'; &('C:/Program Files (x86)/Bochs-2.6.9/bochsdbg.exe') -f bochsrc.bxrc -q",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
